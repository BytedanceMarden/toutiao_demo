<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <!--新闻详情内容-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--头像-->
            <ImageView
                android:id="@+id/news_item_avatar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/ic_circle_default"
                android:layout_gravity="center"
                />
            <!--名字及简介-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!--姓名-->
                <TextView
                    android:id="@+id/news_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="123"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:textSize="15.0sp"/>
                <!--别名-->
                <TextView
                    android:id="@+id/news_item_remark_name"
                    android:text="111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/color_introduce"
                    android:textSize="13.0sp" />
            </LinearLayout>

            <!--上边界线-->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!--关注-->
            <Button
                android:id="@+id/news_item_follow"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@null"
                android:text="关注"
                android:textColor="@color/color_follow"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_item_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:text="@string/test"
                android:textColor="@color/black"
                android:textSize="16sp" />

<!--            <TextView-->
<!--                android:id="@+id/news_item_expand"-->
<!--                android:padding="5dp"-->
<!--                android:layout_gravity="right"-->
<!--                android:text="展开"-->
<!--                android:textColor="#aa8863"-->
<!--                android:textSize="14sp"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:layout_below="@+id/news_item_content"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"/>-->


            <GridLayout
                android:id="@+id/news_item_image_list"
                android:layout_below="@id/tv_title"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



<!--            <LinearLayout-->
<!--                android:id="@+id/news_item_image_list"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="123dp"-->
<!--                android:layout_below="@id/tv_title"-->
<!--                android:gravity="center"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:orientation="horizontal">-->
<!--            </LinearLayout>-->

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <TextView
                    android:text="分享"
                    android:drawableLeft="@mipmap/icon_share3"
                    android:textColor="@color/black"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:id="@+id/feed_comment_count"
                    android:textColor="@color/black"
                    android:drawableLeft="@mipmap/icon_comment2"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="160dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:id="@+id/feed_digg_count"
                    android:textColor="@color/black"
                    android:drawableLeft="@mipmap/icon_digg3"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="300dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>